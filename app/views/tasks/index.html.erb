<div class="container">
  <h1>Tasks</h1>



  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.status %></td>
      <td>
        <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-sm btn-primary mr-2' %>
        <%= button_to 'Destroy', task, method: :delete, form: { data: { 'turbo-confirm': 'Are you sure?' } }, class: 'btn btn-sm btn-danger'  %>
      
</td>

    </tr>
  <% end %>
</tbody>

  </table>

  <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
</div>
